{
  "manifest_version": 3,
  "name": "FreeMedium",
  "version": "2.0",
  "description": "An extension to read Medium posts for free.",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": [
        "https://*.medium.com/*",
        "https://levelup.gitconnected.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
